/* pages/upload/upload.wxss */
.footer {
    font-size: 12px;
    text-align: center;
    position: absolute;
    bottom: 20px;
}

.tips {
    font-size: 15px;
    padding: 4px 4px 4px 4px;
    margin: 2px 10px;
    display: inline-block;
    border: 4px solid #71f19e;
    border-radius: 17px;
}

.movable_area {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1111111;
}

.movable_view {
    pointer-events: auto; 
    height: auto;
    width: auto;
}